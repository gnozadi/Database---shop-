<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SignUpController">

    <children>
        <Label text="Username" alignment="CENTER" layoutX="88.0" layoutY="30.0" prefHeight="31.0" prefWidth="130.0"/>

        <Label text="Email" alignment="CENTER" layoutX="88.0" layoutY="80.0" prefHeight="31.0" prefWidth="130.0"/>

        <Label text="Password" alignment="CENTER" layoutX="88.0" layoutY="130.0" prefHeight="31.0" prefWidth="130.0"/>

        <Label text="Repeat Password" alignment="CENTER" layoutX="88.0" layoutY="180.0" prefHeight="31.0" prefWidth="130.0"/>

        <TextField promptText="Enter Username" fx:id="tf_user_field" layoutX="280.0" layoutY="30.0" prefHeight="31.0" prefWidth="220.0"/>

        <TextField promptText="Enter Email" fx:id="tf_email_field" layoutX="280.0" layoutY="80.0" prefHeight="31.0" prefWidth="220.0"/>

        <PasswordField promptText="Enter Password" fx:id="pf_pass_field" layoutX="280.0" layoutY="130.0" prefHeight="31.0" prefWidth="220.0"/>

        <PasswordField promptText="Repeat Password" fx:id="pf_repeat_pass_field" layoutX="280.0" layoutY="180.0" prefHeight="31.0" prefWidth="220.0"/>

        <Label text="Already have account? login" onMouseClicked="#goLogin" alignment="CENTER" layoutX="80.0" layoutY="230.0" prefHeight="31.0" prefWidth="402.0" textAlignment="CENTER"/>

        <Button text="sign Up" layoutX="250.0" layoutY="280.0" mnemonicParsing="false" onAction="#signUp" prefHeight="31.0" prefWidth="75.0"/>

        <Label fx:id="lbl_message" text="" alignment="CENTER" layoutX="80.0" layoutY="330.0" prefHeight="31.0" prefWidth="402.0" textAlignment="CENTER"/>

    </children>
</AnchorPane>
